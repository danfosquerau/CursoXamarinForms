<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesVisuais.View.VisualControls.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider Minimum="0"
                    Maximum="100"
                    Value="20"
                    ValueChanged="Slider_ValueChanged"/>
            <Label x:Name="lblSliderResult" />
            <Stepper Minimum="0"
                     Maximum="10"
                     Increment="2"
                     Value="4"
                     ValueChanged="Stepper_ValueChanged"/>
            <Label x:Name="lblStepperResult" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>