<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesVisuais.View.VisualControls.ButtonPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="1 Botão" 
                    TextColor="Blue"
                    FontSize="24"
                    BorderColor="DarkBlue"
                    CornerRadius="20"
                    BorderWidth="5"
                    BackgroundColor="White"/>
            <Button Text="2 Botão" />
            <Button HeightRequest="120"
                    WidthRequest="120"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    ImageSource="http://icons.iconarchive.com/icons/hopstarter/soft-scraps/128/Button-Blank-Red-icon.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>