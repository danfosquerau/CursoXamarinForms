<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesVisuais.View.VisualControls.TableViewPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="Backup">
                        <SwitchCell Text="Backup imagens" On="False"/>
                        <SwitchCell Text="Backup texto" On="False"/>
                        <SwitchCell Text="Backup chat" On="False"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Backup geral (semanal)" />
                                <Slider HorizontalOptions="FillAndExpand" Minimum="0" Maximum="7"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Segurança">
                        <SwitchCell Text="senhas" On="True"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>