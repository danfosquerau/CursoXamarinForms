<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TiposDePaginas.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="ColorPrimary">#2196F3</Color>
            <Color x:Key="ColorAccent">#DBEDF9</Color>

            <!--Global Styles-->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="{StaticResource ColorAccent}"/>
            </Style>
            <Style TargetType="Page">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}"/>
            </Style>
            <Style TargetType="StackLayout">
                <Setter Property="Spacing" Value="50"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource ColorPrimary}"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>